<%- model_class = Product -%>
<div class="row row-centered">
  <div class="col-md-8 col-md-offset-2">
    <div class="well product-well-lg">
<div class="product-title">
  <h1 class="no-margin"><%#=t '.title', :default => model_class.model_name.human.titleize %>
  <%= @product.name %>
  </h1>
</div>
<div>
<%= image_tag @product.image_url.to_s, size: "400x400" %>
</div>
        <div class="fl cash">
           <%= number_to_currency(@product.price)%>
        </div>
        <div>
           <%= link_to 'Buy Now', @product.link, :class => "btn btn-danger btn-buy" %>
        </div>
        </br>
        </br>
        <div>
          <small class="via">Via: <%= @product.source %></small>
        </div>
<!-- <dl class="dl-horizontal">
  <dt><strong><%#= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%#= @product.name %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%#= @product.price %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:link) %>:</strong></dt>
  <dd><%#= @product.link %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:source) %>:</strong></dt>
  <dd><%#= @product.source %></dd>
</dl>
-->
<div>
  <%= social_share_button_tag(@product.name) %>
</div>
<% if user_signed_in? %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              products_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_path(@product), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
    </div>
  </div>
</div>