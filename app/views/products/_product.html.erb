<div class="row row-centered">
  <div class="col-md-8 col-md-offset-2 col-xs-offset-0">
  <% @products.each do |product| %>
    <div class="col-xs-12 col-md-6 col-lg-3 product-child col-fixed col-centered">
      <div class="well well-lg product-well">
        <div class="product-img center">
          <%= link_to( image_tag(product.image_url.to_s, size: "200x200"), product.link) %>
        </div>
        <div class="product-title">
          <%= link_to product.name, product_path(product) %>
           <%= link_to 'Buy Now', product.link, :class => "btn btn-danger btn-buy" %>
        </div>
        <div class="bold">
          <%= number_to_currency(product.price)%>
        </div>
        <div>
          <small class="via">Via: <%= product.source %></small>
        </div>
        <div>
          <%= social_share_button_tag(product.name, :url => "https://railscourse-jaesea.c9users.io/products/#{product.id}") %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
